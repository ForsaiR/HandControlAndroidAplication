<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/textView3"
        android:layout_width="239dp"
        android:layout_height="101dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="143dp"
        android:text="@string/title_connection"
        android:textAppearance="@style/h1" />


        <RadioGroup
            android:id="@+id/radios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="9dp"
            >

            <RadioButton
                android:id="@+id/radioButton_bluetooth"
                android:layout_width="184dp"
                android:layout_height="37dp"
                android:paddingStart="17dp"
                android:layout_marginTop="279dp"
                android:textColor="#ffffff"
                android:text="@string/bluetooth"
                android:textAppearance="@style/text3"
                android:button="@drawable/radio" />

            <RadioButton
                android:id="@+id/radioButton_grpc"
                android:layout_width="184dp"
                android:layout_height="37dp"
                android:layout_marginTop="9dp"
                android:paddingStart="17dp"
                android:button="@drawable/radio"
                android:text="@string/grpc"
                android:textAppearance="@style/text3"
                android:textColor="#ffffff" />
        </RadioGroup>

    <Button
        android:id="@+id/okButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="459dp"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:background="@drawable/button_input"
        android:text="@string/ok"
        android:textAppearance="@style/text1" />


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>